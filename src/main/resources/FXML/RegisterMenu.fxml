<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.RegisterMenuController"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Register Menu"/>
            <TextField promptText="username" maxWidth="300" fx:id="username"/>
            <PasswordField promptText="password" maxWidth="300" fx:id="password"/>
            <HBox alignment="CENTER" spacing="15">
                <Button text="Sign up" onMouseClicked="#register"/>
                <Button text="Reset" onMouseClicked="#reset"/>
                <Button text="Already Have An Account" onMouseClicked="#startLoginMenu"/>
                <Button text="Continue as guest" onMouseClicked="#guestLogin"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
